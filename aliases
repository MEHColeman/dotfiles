# common aliases

alias less='less -R'
alias ack='ack-grep'

alias s="ls"
alias sl="ls"
alias la="ls -la"
alias al="ls -la"
alias lr="ls -lart"
alias la='ls -lart'

alias sonos="cd ~/dev/msp/sonos"
alias csearch="cd ~/dev/msp/csearch"
alias pssh='parallel-ssh -t-1 -P'

alias ffs=sudo
alias please=sudo

alias gitst='git fetch origin && git log HEAD..origin/master --oneline'
alias got='git '
alias get='git '
alias gcm='git commit -m '

alias bi='bundle check && bundle install --binstubs bundler/bin --standalone'
alias bii='bundle install --binstubs bundler/bin --standalone'
alias be='bundle exec'

alias tmux='tmux -2'

alias emacs='emacs -nw'

if [[ -s "$HOME/.aliases.local" ]]
then
  source "$HOME/.aliases.local"
fi
