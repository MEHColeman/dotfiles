[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
        panic = !tar cvf ../git_panic.tar *
        co = checkout
        ci = commit
        ciam = commit -am
        cis = commit -s
        br = branch
        st = status
        rb = rebase
        fix = commit --amend -C HEAD-
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[push]
	default = current
