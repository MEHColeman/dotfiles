[include]
        path=~/.gitconfig.local
[user]
        name=Mark Coleman
[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
        panic = !tar cvf ../git_panic.tar *
        co = checkout
        ci = commit
        ciam = commit -am
        cis = commit -s
        br = branch
        st = status
        rb = rebase
        df = diff
        fix = commit --amend -C HEAD-
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        pl = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        lgp = log -p
        type = cat-file -t
        dump = cat-file -p
        unstage = reset HEAD --
	d = difftool

[push]
	default = current

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = tvim -f
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
