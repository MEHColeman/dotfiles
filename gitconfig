[include]
        path=~/.gitconfig.local
[user]
	name = Mark Coleman
	email = m@rkcoleman.co.uk
	signingkey = 5016C1BB1F1FBA4D
[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
        panic = !tar cvf ../git_panic.tar *
        co = checkout
        ci = commit
        ciam = commit -am
        cis = commit -s
        br = branch
        st = status
        rb = rebase
        df = diff
        fix = commit --amend -C HEAD-
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        shlg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
        lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
        pl = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        lgp = log -p
        type = cat-file -t
        dump = cat-file -p
        unstage = reset HEAD --
	d = difftool
	fix-conflicts = !$(git config core.editor) $(git ls-files -u | cut -f2 | uniq | xargs echo)
	it = !git init && git commit -m “root” --allow-empty

[push]
	default = current

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
	editor = vim
[diff]
	tool = vimdiff
	compactionHeuristic = true
	algorithm = histogram
	indentHeuristic = on
[difftool]
	prompt = false
[branch]
	autosetupmerge = true
[merge]
  conflictstyle = diff3
[merge "gemfilelock"]
  name = relocks the Gemfile.lock
  driver = bundle install
[commit]
  template = ~/.git_commit_template.txt
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[submodule]
	fetchJobs = 4
[interactive]
	diffFilter = diff-highlight
[pager]
	log = diff-highlight | less -RX
	show = diff-highlight | less -RX
	diff = diff-highlight | less -RX
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[url "git@github.com:"]
	insteadOf = https://github.com/
